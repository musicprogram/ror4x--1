<h1>Listing engineers</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Dependency</th>
      <th>Studies</th>
      <th>Proyect</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engineers.each do |engineer| %>
      <tr>
        <td><%= engineer.fullname %></td>
        <td><%= engineer.dependency %></td>
        <td><%= engineer.studies %></td>
        <td><%= engineer.proyect %></td>
        <td><%= link_to 'Show', engineer %></td>
        <td><%= link_to 'Edit', edit_engineer_path(engineer) %></td>
        <td><%= link_to 'Destroy', engineer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

